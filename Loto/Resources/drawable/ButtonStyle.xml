<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">

    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="4dp"></corners>
          <solid android:color="#616161"/>
        </shape>
        <item android:bottom="2dp" android:left="2dp">
          <shape>
            <gradient android:angle="270" android:endColor="#cfd8dc" android:startColor="#cfd8dc"/>
            <stroke android:width="1dp" android:color="#ef6c00"/>
            <corners android:radius="4dp"/>
            <padding android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp"/>
          </shape>
        </item>
        </item>
    </layer-list>
  </item>

  <item android:state_pressed="false">

    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="4dp"></corners>
          <solid android:color="#0288d1"/>
        </shape>
        <item android:bottom="2dp" android:left="2dp">
          <shape>
            <gradient android:angle="270" android:endColor="#5e35b1" android:startColor="#d1c4e9"/>
            <stroke android:width="1dp" android:color="#ef6c00"/>
            <corners android:radius="4dp"/>
            <padding android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp"/>
          </shape>
        </item>
      </item>
    </layer-list>
  </item>
  
  
  
  
</selector>
